<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InternetCheck" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrime</item>
        <item name="colorPrimaryVariant">@color/ColorPrime</item>
        <item name="colorOnPrimary">@color/ColorPrime</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ColorScound</item>
        <item name="colorSecondaryVariant">@color/ColorScound</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:textDirection" tools:ignore="NewApi">locale</item>
        <item name="android:textAlignment" tools:ignore="NewApi">gravity</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/ColorPrime</item>
        <item name="colorControlHighlight">#C3BCBC</item>

        <!--        <item name="android:dialogTheme">@style/FullScreenDialogTheme</item>
                <item name="dialogTheme">@style/FullScreenDialogTheme</item>-->


    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ColorPrime</item>
        <item name="colorPrimaryVariant">@color/ColorPrime</item>
        <item name="colorOnPrimary">@color/ColorPrime</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FFC107</item>
        <item name="colorSecondaryVariant">#FFC107</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:textDirection" tools:ignore="NewApi">locale</item>
        <item name="android:textAlignment" tools:ignore="NewApi">gravity</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/ColorPrime</item>

    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@color/ColorPrime</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape</item>
    </style>

    <style name="ButtonStyle"  parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/color_button</item>
    </style>

    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progssbar</item>
    </style>
    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12sp</item>
        <item name="android:text">@string/ad_attribution</item>
        <item name="android:background">#FFCC66</item>
        <item name="android:width">15dp</item>
        <item name="android:height">15dp</item>
    </style>
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#FF8F00</item>
        <item name="colorControlActivated">#FF8F00</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">#9A9A9A</item>
    </style>

    <style name="FullScreenDialogTheme" parent="ThemeOverlay.Material3.Dialog">
        <!-- Remove the title bar -->
        <item name="android:windowNoTitle">true</item>
        <!-- Set the dialog's width and height -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- Set the dialog's background to transparent -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>


    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/ColorPrime</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_frame_55__1_</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.InternetCheck</item>
    </style>


</resources>