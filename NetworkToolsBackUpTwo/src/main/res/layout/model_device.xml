<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:backgroundTint="@color/ColorPrime"
    android:background="@color/ColorPrime"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:elevation="0dp"
        app:strokeColor="@color/card_color"
        app:cardBackgroundColor="@color/card_color"
        android:background="@color/card_color"
        app:cardElevation="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        app:cardCornerRadius="12dp"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/card_color"
        android:orientation="horizontal"
        >
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        app:tint = "@color/ColorScound"
        android:layout_gravity="center"
        android:src="@drawable/ic_user"/>
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:background="@color/ColorPrime"
            android:layout_marginBottom="4dp"
            />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center"
        android:layout_marginRight="8dp"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textSize="14sp"

            android:text="192.168.1.1"
            android:layout_height="wrap_content"
            android:id="@+id/ipAddress"
            />
        <TextView
            android:text="mac : 34:fE:$#$:%TG:F"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="wrap_content"
            android:id="@+id/macAddress"
            />

        <TextView
            android:id="@+id/VendorDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="android"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
        <ImageView
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:layout_width="50dp"
            android:id="@+id/more"
            android:scaleType="centerInside"
            android:layout_height="50dp"
            android:layout_gravity="center"
            app:tint = "@color/white"
            android:src="@drawable/ic_baseline_more_vert_24"
            />
    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>