<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        android:layout_width="260dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:strokeWidth="0dp"
        android:id="@+id/cardmain"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry"
        app:cardCornerRadius="10dp"
        >
        <ScrollView
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:fillViewport="true"
            android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="255dp"
        android:paddingEnd="0dp"
        android:id="@+id/MainPopMenu"
        android:layout_height="wrap_content"
        tools:ignore="RtlSymmetry">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/btn1"
    android:layout_height="55dp"
    >

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:id="@+id/Next"
        app:tint="@color/gray"
        android:background="?attr/selectableItemBackground"

        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:tint="@color/gray"
        android:id="@+id/ReloadIcon"
        android:background="?attr/selectableItemBackground"

        android:src="@drawable/reload_svgrepo_com"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:src="@drawable/download_svgrepo_com"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:id="@+id/downloadpage"
        app:tint="@color/gray"
        android:background="?attr/selectableItemBackground"

        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        app:tint="@color/gray"
        android:id="@+id/AddBookMarkIcon"
        android:src="@drawable/ic_star_svgrepo_com__1_"
        android:background="?attr/selectableItemBackground"

        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerInside"
        android:src="@drawable/info_svgrepo_com"
        app:tint="@color/gray"
        android:id="@+id/InfoIcon"
        android:background="?attr/selectableItemBackground"

        />
    <ImageView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="?attr/selectableItemBackground"
        android:scaleType="centerInside"
        android:src="@drawable/ic_download_svgrepo_com__2_"
        app:tint="@color/gray"
        android:visibility="gone"
        android:id="@+id/AddDownloadIcon"
        />

</LinearLayout>

    <LinearLayout
        android:id="@+id/btn2"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="16sp"
            android:text="@string/add_new_tab"
            android:padding="11dp"
            app:cornerRadius="0dp"
            android:background="?attr/selectableItemBackground"
            android:drawablePadding="12dp"
            android:textColor="@color/gray"
            android:drawableTint="@color/gray"
            android:drawableStart="@drawable/plus_square_svgrepo_com"
            android:textAllCaps="false"
            android:gravity="center_vertical"
            android:id="@+id/AddTabIcon"
            />

    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EFEFEF"
            />
        <LinearLayout
            android:id="@+id/btn3"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="11dp"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="12dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/download_svgrepo_com__4_"
                android:id="@+id/DownloadIcon"
                android:text="@string/Download"
                android:gravity="center_vertical"
                android:textSize="16sp"

                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:padding="11dp"
                android:background="?attr/selectableItemBackground"
                android:drawablePadding="8dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/ic_bookmark_svgrepo_com"
                android:id="@+id/BookMarkIcon"
                android:text="@string/bookmarks"
                android:gravity="center_vertical"
                android:textSize="16sp"

                />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"
            />

        <LinearLayout
            android:id="@+id/btn4"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="250dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="11dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/share_android_svgrepo_com"
                android:id="@+id/ShareIcon"
                android:text="@string/share"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="11dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/search_file_svgrepo_com"
                android:id="@+id/FindPageIcon"
                android:text="@string/find_page"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="11dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/home_screen_svgrepo_com"
                android:id="@+id/AddToScreen"
                android:text="@string/AddToHomeScreen"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="11dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/print_svgrepo_com"
                android:id="@+id/PrintWeb"
                android:text="@string/Print"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"
                />



            <com.google.android.material.materialswitch.MaterialSwitch
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:checked="false"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textSize="16sp"
                app:thumbTint="@color/color_two"
                app:trackTint="@color/color"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:id="@+id/DesktopModeIcon"
                android:text="Desktop Mode"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECECEC"
            />
        <LinearLayout
            android:id="@+id/btn5"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="100dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/setting_gear_svgrepo_com"
                android:id="@+id/SettingIcon"
                android:gravity="center_vertical"
                android:text="@string/setting"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:drawablePadding="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="14dp"
                android:paddingEnd="14dp"
                android:textColor="@color/gray"
                android:drawableTint="@color/gray"
                android:drawableStart="@drawable/cancel_svgrepo_com"
                android:id="@+id/cancelpop"
                android:gravity="center_vertical"
                android:text="@string/Close"
                android:textSize="16sp"
                android:background="?attr/selectableItemBackground"

                />

        </LinearLayout>

</LinearLayout>

        </ScrollView>
    </com.google.android.material.card.MaterialCardView>
