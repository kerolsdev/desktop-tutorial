<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ssid"
                android:layout_marginBottom="8dp"
                android:textColor="#9FFFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/text_ssid_ana"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="test"
                />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:id="@+id/ssid_copy_ana"
            app:cardCornerRadius="16dp"
            tools:ignore="UnusedAttribute">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_content_copy_24"
                app:tint = "@color/white"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mac"
                android:layout_marginBottom="8dp"
                android:textColor="#9FFFFFFF"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_gravity="center_vertical"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/text_mac_ana"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:text="test"
                />


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:elevation="0dp"
            app:cardElevation="0dp"
            android:id="@+id/mac_copy_ana"
            app:cardCornerRadius="16dp"
            tools:ignore="UnusedAttribute">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_content_copy_24"
                app:tint = "@color/white"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:text="@string/Connect_by_Password"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:elevation="0dp"
        android:textAllCaps="false"
        app:elevation="0dp"
        app:cornerRadius="24dp"
        tools:ignore="UnusedAttribute" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_wps"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:text="@string/Connect_by_wps"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:elevation="0dp"
        android:textAllCaps="false"
        app:elevation="0dp"
        app:cornerRadius="24dp"
        tools:ignore="UnusedAttribute" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_wps_auto"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="6dp"
        android:text="@string/Connect_by_wps_auto"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:elevation="0dp"
        android:textAllCaps="false"
        app:elevation="0dp"
        app:cornerRadius="24dp"
        tools:ignore="UnusedAttribute" />
</LinearLayout>