<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_margin="24dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/shape_background"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/reason_feedback"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:text="@string/feedback"

        />


    <TextView
        android:id="@+id/reason_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/rate_us"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:text="@string/Please_rate"
        android:textSize="14sp"
        android:textStyle="normal" />
    <RatingBar
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/rate_us"
        android:layout_height="40dp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#C9C9C9"
        android:id="@+id/view_line"
        android:layout_below="@id/rate_us"
        android:layout_marginTop="35dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="@string/rate_us"
        android:layout_below="@id/view_line"
        android:id="@+id/startRate"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        />



</RelativeLayout>