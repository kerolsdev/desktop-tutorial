    </LinearLayout>
    <FrameLayout
        android:id="@+id/fullScreenVideo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

